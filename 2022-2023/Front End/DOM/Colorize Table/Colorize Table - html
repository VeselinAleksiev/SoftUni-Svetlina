    <button onclick="colorize()">Colorize</button>
    <script>
        function colorize()
        {
            let rows = document.getElementsByTagName("tr");
            for (let i = 1; i <= rows.length - 1; i += 2) {
                rows[i].style.backgroundColor = "teal";
            }
        }
   </script> 
